<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Hotel</th>
    <th>Room number</th>
    <th>Room price</th>
    <th>Room discount</th>
    <th>Room service</th>
    <th>Room image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.hotel_id %></td>
    <td><%= room.room_number %></td>
    <td><%= room.room_price %></td>
    <td><%= room.room_discount %></td>
    <td><%= room.room_service %></td>
    <td><%= room.room_image %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

